{
  "name": "video-downloader",
  "version": "1.0.0",
  "description": "Video downloader using yt-dlp and ffmpeg",
  "main": "electron-main.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "electron": "electron .",
    "electron-dev": "NODE_ENV=development electron .",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build-portable": "electron-builder --win --publish never",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "build": {
    "appId": "com.nexus.videodownloader",
    "productName": "NEXUS视频下载器",
    "directories": {
      "output": "dist-v5"
    },
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "server.js",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "tools/",
        "to": "tools",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "tools-mac/",
        "to": "tools",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "portable": {
      "artifactName": "NEXUS视频下载器-${version}-portable.exe"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "nodemon": "^3.0.1"
  }
}
